  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "erasableSyntaxOnly": true,
    "allowArbitraryExtensions": false,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ]
